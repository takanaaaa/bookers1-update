<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title mb-3" >Sign in</h5>
    <h6 class="card-subtitle mb-2 text-muted"></h6>
    <div class="card-text">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, class: "mb-0" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前" %>
      </div>

      <div class="field">
        <%= f.label :email, class: "mb-0" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>

      <div class="field">
        <%= f.label :password,  class: "mb-0" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード"  %>
      </div>

      <div class="field pb-3">
        <%= f.label :password_confirmation,  class: "mb-0" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認"  %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>






