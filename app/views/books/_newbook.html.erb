<%= form_with model:book, local:true do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</p>
      <% book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    </div>
  <% end %>
  <div class="form-group" >
    <div class="inputsm py-3">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control input-sm" %>
    </div>

    <div class="inputsm py-3">
      <%= f.attachment_field :image, class: "form-control input-sm" %>
    </div>

    <div class="inputlg py-3">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control input-lg" %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
