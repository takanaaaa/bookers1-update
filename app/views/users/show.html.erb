<%= render "layouts/profile", user: @user%>

<div class="container-fluid py-5">
  <div class="row">
    <div class="col-md-3 mr-4 my-5">
      <h2>New book</h2>
      <%= render 'books/newbook', book: @book %>
    </div>
    <div class="col-md-8">
      <%= render 'books/lists', books: @books %>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @books %>
  </div>
</div>

