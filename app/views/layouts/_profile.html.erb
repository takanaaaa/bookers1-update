<div class="card">
  <div class="card-body">
    <% if user_signed_in? %>
      <div class="row">
        <div class="col-3">
          <%= attachment_image_tag(user, :profile_image, fallback: "nophoto_thumbnail.png",size: "75x75")%>
        </div>
        <div class="col-3">
          user name :</br>
          <%= link_to user.name, user_path(user.id) %>
        </div>
        <div class="col-3">
          profile :</br>
          <%= user.profile_text %>
        </div>
        <% if current_user == user %>
          <div class="col-3">
            <%= link_to "edit", edit_user_path(user) %></br>
          </div>
        <% end %>
      </div>
    <% else %>
      <h5 class="fas fa-user-alt p-1">ã€€guests</h5>
    <% end %>
  </div>
</div>