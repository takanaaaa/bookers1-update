<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-3">
        <%= attachment_image_tag(user, :profile_image, fallback: "nophoto_thumbnail.png",size: "75x75")%>
      </div>
      <div class="col-3">
        user name :</br>
        <%= link_to user.name, user_path(user.id) %>
      </div>
      <div class="col-3">
        profile :</br>
        <%= user.profile_text %>
      </div>
      <div class="col-3">
        <%= link_to "edit", edit_user_path(user) %></br>
      </div>
    </div>
  </div>
</div>